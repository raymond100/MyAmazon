<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    @await Html.PartialAsync("_Favicons")
    <title>@ViewData["Title"] - ShoppingCart</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ShoppingCart.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Products" asp-action="Index">
                    <i class="bi bi-shop"></i> ShoppingCart
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link active" href="/products" aria-current="page">Home</a>
                        </li>

                        <li class="nav-item justify-content-end">
                            <form class="d-flex" role="search" asp-controller="products" asp-action="index">
                                <div class="input-group">
                                    <span class="input-group-text" id="basic-addon1">
                                        <a id="selected-category" class="dropdown-toggle"  data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">All</a>
                                        <div class="dropdown-menu" id="category-dropdown">
                                            @await Component.InvokeAsync("Categories")
                                            @if (User.IsInRole("Vendor"))
                                            {
                                                <div class="dropdown-divider"></div>
                                                <a class="dropdown-item" asp-area="admin" asp-controller="category" asp-action="index">
                                                    <i class="bi bi-plus-square"></i> New Category
                                                </a>
                                            }
                                        </div>
                                    </span>
                                    <input name="SearchString" type="search" class="form-control" placeholder="Search" aria-label="Search" aria-describedby="basic-addon1">
                                    <button class="btn btn-light" type="submit">
                                        <i class="bi bi-search"></i>
                                    </button>
                                </div>
                            </form>
                        </li>

                        @await Component.InvokeAsync("SmallCart")
                        @if (!User.Identity?.IsAuthenticated ?? false)
                        {
                            <li class="nav-item px-2">
                                <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">Sign In</a>
                            </li>
                        }
                    </ul>
                    @if (User.Identity?.IsAuthenticated ?? false)
                    {
                        <hr>
                        <div class="dropdown">
                            <a href="#" class="d-flex a-text align-items-center justify-content-center p-3 link-dark text-decoration-none dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
                                <img src="https://github.com/mdo.png" alt="mdo" width="32" height="32" class="rounded-circle me-2">
                                <strong>@User.Identity.Name</strong>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-light dropdown-menu-end text-small shadow" aria-labelledby="dropdownUser1">
                                @if (User.IsInRole("Customer") && !User.IsInRole("Vendor"))
                                {
                                    <a class="btn btn-vendor" data-bs-toggle="modal" data-bs-target="#vendorModal">Become a Vendor</a>
                                    <li><hr class="dropdown-divider"></li>
                                }
                                @if (User.IsInRole("Admin"))
                                {
                                    <li><a class="dropdown-item" href="/admin">Administration</a></li>
                                }
                                @if (User.IsInRole("Vendor"))
                                {
                                    <li><a class="dropdown-item" href="/vendor">My store</a></li>
                                }
                                <li><a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index">Profile</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" asp-controller="User" asp-action="OnPost">Sign out</a></li>
                            </ul>
                        </div>
                    }
                </div>
            </div>
        </nav>
    </header>


    <div class="container-fluid">
        <div>
            @RenderBody()
        </div>
    </div>

    <!-- Modal 1 -->
    <div class="modal fade" id="vendorModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Vendor Subscription</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body bg-image">
                    <div class="card my-4 card-vendor mx-auto">
                        <div class="card-body d-flex">
                            <div class="col-9">
                                <h4> Vendor Subscriber can manage their own store when they have been approved.</h4>
                            </div>
                            <div class="col-3">
                                <svg xmlns="http://www.w3.org/2000/svg" width="50" height="50" fill="#ffc107" class="bi bi-bag-check mt-4 mx-4" viewBox="0 0 16 16">
                                    <path fill-rule="evenodd" d="M10.854 8.146a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708 0l-1.5-1.5a.5.5 0 0 1 .708-.708L7.5 10.793l2.646-2.647a.5.5 0 0 1 .708 0z" />
                                    <path d="M8 1a2.5 2.5 0 0 1 2.5 2.5V4h-5v-.5A2.5 2.5 0 0 1 8 1zm3.5 3v-.5a3.5 3.5 0 1 0-7 0V4H1v10a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V4h-3.5zM2 5h12v9a1 1 0 0 1-1 1H3a1 1 0 0 1-1-1V5z" />
                                </svg>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="modal-footers">
                    <div class="d-grid gap-2 mx-5 my-3">
                        <a class="btn btn-dark a-text" type="button" href="/checkout">20,000$US/year</a>
                    </div>
                    <div class="mx-5 my-3">
                        <small class="f-11">By subscribing, you agree to our Vendor <a href="">Terms of Service.</a> Subscriptions auto-renew until canceled, as described in the Terms. Cancel anytime. A verified phone number is required to subscribe. If you've subscribed on another platform, manage your subscription through that platform.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - ShoppingCart - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>

        $(document).ready(function () {
            $('#category-dropdown').each(function (key, dropdown) {
                var $dropdown = $(dropdown);
                $dropdown.find('a').on('click', function () {
                    console.log($(this).text());
                    $(this).parent().siblings('#selected-category').text($(this).text());
                });
            });
        });
        
    </script>
    <!-- Production version, optimized for size and speed -->
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
<style>
    .btn-vendor {
        color: #000 !important;
        background-color: #ffc107;
        border-color: #ffc107;
    }

    .card-vendor {
        box-shadow: 0 3px 10px rgb(0 0 0 / 0.2);
        width: 80%;
    }

    .bg-image {
        background: #FFC108;
        background: linear-gradient(180deg, #FFC108, #FFFFFF);
    }

    .btn-dark {
        border-radius: 9999px;
    }

    .f-11 {
        font-size: 11px;
        line-height: 1px;
    }

    .a-text, .a-text:hover {
        color: #FFF !important;
    }

</style>


